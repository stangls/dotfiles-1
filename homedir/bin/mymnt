#!/bin/bash
cd $HOME

# Mount/Unmount etc always use the mountpoint as first argument!

function mount() {
    sshfs "$2" "$1"
}

function unmount() {
    fusermount -u "$1"
}

function fstype()  {
    stat -f -c '%T' "$1"
}

function is_fuse() {
    test `fstype "$1"` = "fuseblk"
}

function is_mounted() {
    mountpoint -q "$1"
}

function is_fuse_mounted() {
    is_mounted "$1" && is_fuse "$1"
}

function state() {
    STATE="?"
    if is_mounted "$1" ; then
        if is_fuse "$1" ; then
            STATE="fuse-mounted"
        else
            STATE="unknown-mounted" # (`fstype "$1"`)"
        fi
    else
        STATE="unmounted"
    fi
    echo $STATE
}

function showstate() {
    printf '%-40s %-12s\n' $1 `state "$1"`
}

function remount() {
    case `state "$1"` in
        fuse-mounted)
            unmount "$1"
            ;;
        unmounted)
            ;;
        *)
            echo "Mounted filesystem can't be handled: $1 `fstype "$1"`"
            return 1
            ;;
    esac
    mount "$1" "$2"
}

ACTION=showstate
#ACTION=echo
ACTIVE="1 2"

M_1_POINT="$HOME/miomi"
M_1_FS="doggie:miomi"

M_2_POINT="$HOME/Videos/xxx"
M_2_FS="doggie:/mnt/localdata/Markus/xxx"

case "$1" in
    "list"|"show")
        ACTION=showstate
        ;;
    "mount")
        ACTION=mount
        ;;
    "unmount")
        ACTION=unmount
        ;;
    "auto"|"remount")
        ACTION=remount
        ;;
    *)
        (
            echo "Invalid syntax"
            echo "`basename $0` <auto|list|mount|unmount>"
        ) 1>&2
        exit 1
        ;;
esac
shift

for i in $ACTIVE ; do
    eval \$ACTION \$M_${i}_POINT \$M_${i}_FS
done

#sshfs doggie:miomi miomi
#sshfs doggie:/mnt/localdata/Markus/xxx Videos/xxx

